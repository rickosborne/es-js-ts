{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "./",
		"composite": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": false,
		"exactOptionalPropertyTypes": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "None",
		"moduleResolution": "Node",
		"newLine": "LF",
		"noEmit": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		// "noUncheckedSideEffectImports": true, // Not supported by api-extractor ... yet
		"noUnusedLocals": true,
		"paths": {
			"@rickosborne/foundation": [
				"foundation/ts/index.ts"
			],
			"@rickosborne/guard": [
				"guard/ts/index.ts"
			],
			"@rickosborne/planar": [
				"planar/ts/index.ts"
			],
			"@rickosborne/term": [
				"term/ts/index.ts"
			],
			"@rickosborne/typical": [
				"typical/ts/index.ts"
			]
		},
		"resolveJsonModule": false,
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"strictBindCallApply": true,
		// "strictBuiltinIteratorReturn": true, // Not supported by api-extractor
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "esnext"
	},
	"exclude": [
		"**/attic/**",
		"**/dist/**",
		"**/node_modules/**",
		"**/.cache/**",
		"**/.idea/**",
		"**/.nyc_output/**",
		"**/coverage/**"
	],
	"extends": "@tsconfig/node22/tsconfig.json"
}
